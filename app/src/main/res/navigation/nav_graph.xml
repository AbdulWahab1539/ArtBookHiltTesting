<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/artsFragment">


    <fragment
        android:id="@+id/artsFragment"
        android:name="com.abduldev.artbookapptestingguide.view.fragments.ArtsFragment"
        android:label="ArtsFragment" >
        <action
            android:id="@+id/action_artsFragment_to_artDetailFragment"
            app:destination="@id/artDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/artDetailFragment"
        android:name="com.abduldev.artbookapptestingguide.view.fragments.ArtDetailFragment"
        android:label="ArtDetailFragment" >
        <action
            android:id="@+id/action_artDetailFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.abduldev.artbookapptestingguide.view.fragments.SearchFragment"
        android:label="SearchFragment" />
</navigation>